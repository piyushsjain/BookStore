@*@model BookModel*@
@{
    ViewData["Title"] = "Book Detail "+ @Model.Title;
}
<div class="container mt-4 mb-4">
    <div class="row">
        <div class="col-md-6">
            <div id="carouselExample" class="carousel slide">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/images/book/book1.jpeg" class="d-block w-100 h-75" alt="book1" asp-append-version="true">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/book/book2.jpeg" class="d-block w-100 h-75" alt="book2" asp-append-version="true">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/book/book3.jpeg" class="d-block w-100 h-75" alt="book3" asp-append-version="true">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <div class="col-md-6">
            <h3>@Model.Title</h3>
            <h6 class="text-primary">By: @Model.Author</h6>
            <p>@Model.Description</p>
            <button class="btn btn-primary">Read Now</button>
            <hr />
            <ul class="list-group">
                <li class="list-group-item"><b>Category - </b>@Model.Category</li>
                <li class="list-group-item"><b>Total Pages - </b>@Model.TotalPages</li>
                <li class="list-group-item"><b>Language - </b>@Model.Language</li>
            </ul>
        </div>
    </div>
    <hr />
    <h3 class="display-4 mb-3">Similar Books</h3>
    <div class="row">
        @for (int i = 0; i < 5; i++)
        {
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <svg xmlns="https://placeholder.pics/svg/300"></svg>
                    </div>
                    <div class="card-body">
                        <h3 class="card-title">Title</h3>
                        <p class="card-text">Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="#" class="btn btn-sm btn-outline-secondary">View Details</a>
                            <small class="text-muted">Author</small>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
