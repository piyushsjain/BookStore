@*@model IEnumerable<BookModel>*@
@{
    ViewData["Title"] = "All Books";
}
<div class="container">
    <h2 class="display-4">All Books</h2>
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <img src="@book.CoverImageUrl" class="img-thumbnail" />
                    </div>
                    <div class="card-body">
                        <h3 class="card-title">@book.Title</h3>
                        <p class="card-text">@book.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-controller="book" asp-action="getbook" asp-route-id="@book.Id" class="btn btn-sm btn-outline-secondary">View Details</a>
                            <small class="text-muted">@book.Author</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
